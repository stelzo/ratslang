{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ratslang",
  "scopeName": "source.rl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#paths" },
    { "include": "#booleans" },
    { "include": "#quantities" },
    { "include": "#numbers" },
    { "include": "#internal-variables" },
    { "include": "#namespace-accessor" },
    { "include": "#unquoted-strings" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign",
          "match": "#[^\\n]*"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    "paths": {
      "name": "string.unquoted.path",
      "match": "\\.?/+[^\\n\\s]*"
    },
    "booleans": {
      "name": "constant.language.boolean",
      "match": "\\b(true|false)\\b"
    },
    "quantities": {
      "patterns": [
        {
          "name": "constant.numeric.quantity.time",
          "match": "\\b[+-]?(\\d+\\.\\d+|\\d+)(ys|zs|as|fs|ps|ns|us|µs|ms|cs|ds|s|das|hs|ks|Ms|Gs|Ts|Ps|Es|Zs|Ys|min|mins|minute|minutes|h|hour|hours|d|day|days|a|year|years|shake|shakes|second_sidereal|seconds_sidereal|day_sidereal|days_sidereal|hour_sidereal|hours_sidereal|year_sidereal|years_sidereal|year_tropical|years_tropical)\\b"
        },
        {
          "name": "constant.numeric.quantity.length",
          "match": "\\b[+-]?(\\d+\\.\\d+|\\d+)(ym|zm|am|fm|pm|nm|um|µm|mm|cm|dm|m|dam|hm|km|Mm|Gm|Tm|Pm|Em|Zm|Ym|ft|foot|feet|in|inch|inches|mi|mile|miles|yd|yard|yards|ch|chain|chains|rd|rod|rods|angstrom|ångström|ångstroms|angstroms|fathom|fathoms|au|ua|astronomical_unit|astronomical_units|light_year|light_years|l\\.y\\.|pc|parsec|parsecs|M|nmi|nautical_mile|nautical_miles|micron|microns|µ|mil|mils|a₀|bohr_radius|bohr_radiuses|fermi|fermis|Å|μm|microinch|microinches)\\b"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric",
      "match": "\\b[+-]?(\\d+\\.\\d+|\\d+)\\b"
    },
    "internal-variables": {
      "name": "variable.language",
      "match": "\\b_[a-zA-Z_:\\d]+\\b(?!\\s*[.{])"
    },
    "namespace-accessor": {
      "name": "entity.name.namespace",
      "match": "\\b[a-zA-Z_:][a-zA-Z_:\\d]*(?=\\s*[.{])"
    },
    "unquoted-strings": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "(?<=[=,\\[]\\s*)\\b[a-zA-Z:][a-zA-Z_:\\d]*(?:\\.[a-zA-Z:][a-zA-Z_:\\d]*)*\\b"
        }
      ]
    },
    "variables": {
      "name": "variable.other",
      "match": "\\b[a-zA-Z:][a-zA-Z_:\\d]*\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment",
          "match": "="
        },
        {
          "name": "keyword.operator.range",
          "match": "\\.\\."
        },
        {
          "name": "punctuation.separator.comma",
          "match": ","
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.accessor",
          "match": "\\."
        }
      ]
    }
  }
}
