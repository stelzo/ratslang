{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ratslang",
  "scopeName": "source.rl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#booleans" },
    { "include": "#quantities" },
    { "include": "#numbers" },
    { "include": "#internal-variables" },
    { "include": "#namespace-accessor" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign",
          "match": "(#[^\\n]*)$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    "booleans": {
      "name": "constant.language.boolean",
      "match": "\\b(true|false)\\b"
    },
    "quantities": {
      "name": "constant.numeric.quantity",
      "match": "\\b[+-]?(\\d+\\.\\d*|\\.\\d+|\\d+)(s|ms|mins?|cm|m)\\b"
    },
    "numbers": {
      "name": "constant.numeric",
      "match": "\\b[+-]?(\\d+\\.\\d*|\\.\\d+|\\d+)\\b"
    },
    "internal-variables": {
      "name": "variable.language",
      "match": "\\b_[a-zA-Z0-9_]+\\b"
    },
    "namespace-accessor": {
      "name": "entity.name.namespace",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\.)"
    },
    "variables": {
      "name": "variable.other",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment",
          "match": "="
        },
        {
          "name": "keyword.operator.range",
          "match": "\\.\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.separator.comma",
          "match": ","
        },
        {
          "name": "punctuation.accessor",
          "match": "\\."
        }
      ]
    }
  }
}
